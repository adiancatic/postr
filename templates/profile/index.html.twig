{% extends 'main.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block bodyContent %}

    <div class="container">
        <div class="row">

            <div class="col-xs-12 col-md-4">
                <h1><code>{{ user.username }}'s</code> profile</h1>
            </div>

            <div class="col-xs-12 col-md-8">
                <h5>{{ user.username }}'s posts are:</h5>
                <ul>
                    {% for post in posts %}
                        <li>{{ post.content }}</li>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </div>

{% endblock %}
