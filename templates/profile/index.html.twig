{% extends 'main.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block bodyContent %}

    <div class="profile">
        <div class="row">
            <div class="container">
                <div class="row">

                    <div class="col-xs-12 col-md-4">
                        <div class="profile-summary">
                            <div class="profile-header">
                                <span class="avatar">{{ user.username|first }}</span>
                                <h5>{{ user.username }}</h5>
                            </div>
                            <div class="profile-footer">
                                <a href="#" class="stat">0 Following</a>
                                <a href="#" class="stat">0 Followers</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-8">
                        {% if posts %}
                            {{ include("post/list.html.twig", {"posts": posts}) }}
                        {% else %}
                            {# no posts #}
                        {% endif %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
